{
    "compilerOptions": {
        "module":"es2015",
        "target": "es2015",
        "jsx": "react",    
        "rootDir": "./src", 
        "noImplicitAny": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": false,
        "skipLibCheck": true,
        "moduleResolution":"Node",
        "allowJs": true,
        "allowSyntheticDefaultImports": true
    },
    "filesGlob": [
        "./typings/index.d.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./node_modules/typescript/lib/lib.es6.d.ts"
    ],
    "types": [
      "react",
      "react-dom",
      "react-native"
    ],
    "exclude":[
        "./example",
        "./lib",
        "./scripts",
        "./babel.config.js",
        "./node_modules"
    ],
    "compileOnSave": false
}